sudo apt-get update
sudo apt-get install -y unattended-upgrades
sudo apt-get install -y fail2ban
sudo apt-get install -y python3-pip python3-dev
sudo apt-get install -y software-properties-common
sudo add-apt-repository ppa:nginx/stable
sudo apt-get update
sudo apt install -y nginx
sudo service nginx restart
sudo apt-get install -y git curl wget
sudo apt-get install -y python-software-properties
sudo add-apt-repository ppa:ondrej/php
sudo apt-get update
sudo apt-get install -y php7.4 php7.4-fpm php-mysql php7.4-mysql php-mbstring php-gettext libapache2-mod-php7.4 php-doctrine-dbal php-xml
sudo systemctl restart php7.4-fpm
sudo curl -s https://getcomposer.org/installer | php
sudo mv composer.phar /usr/local/bin/composer
sudo apt-get install -y php7.4-gd php7.4-intl  php7.4-xsl php7.4-mbstring php7.4-curl
sudo service apache2 restart
